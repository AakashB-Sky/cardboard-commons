<div>
  <div>
    <h1>
      Event join request #<%= @the_event_join_request.id %> details
    </h1>

    <div>
      <div>
        <a href="/event_join_requests">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_event_join_request/<%= @the_event_join_request.id %>">
          Delete event join request
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Event
      </dt>
      <dd>
        <%= @the_event_join_request.event_id %>
      </dd>

      <dt>
        Guest
      </dt>
      <dd>
        <%= @the_event_join_request.guest_id %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_event_join_request.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_event_join_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_event_join_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit event join request
    </h2>

    <form action="/modify_event_join_request/<%= @the_event_join_request.id %>"  method="post" >
      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id" value="<%= @the_event_join_request.event_id %>">
      </div>

      <div>
        <label for="guest_id_box">
          Guest
        </label>

        <input type="text" id="guest_id_box" name="query_guest_id" value="<%= @the_event_join_request.guest_id %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_event_join_request.status %>">
      </div>

      <button>
        Update event join request
      </button>
    </form>
  </div>
</div>

<hr>
