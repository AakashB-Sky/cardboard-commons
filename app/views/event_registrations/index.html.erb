<div>
  <div>
    <h1>
      List of all event registrations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new event registration
    </h2>

    <form action="/insert_event_registration" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id">
      </div>

      <button>
        Create event registration
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_event_registrations.each do |an_event_registration| %>
      <tr>
        <td>
          <%= an_event_registration.id %>
        </td>

        <td>
          <%= an_event_registration.user_id %>
        </td>

        <td>
          <%= an_event_registration.event_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_event_registration.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_event_registration.updated_at) %> ago
        </td>

        <td>
          <a href="/event_registrations/<%= an_event_registration.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
