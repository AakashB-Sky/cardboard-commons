<div>
  <div>
    <h1>
      List of all event invitations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new event invitation
    </h2>

    <form action="/insert_event_invitation" method="post">
      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id">
      </div>

      <div>
        <label for="guest_id_box">
          Guest
        </label>

        <input type="text" id="guest_id_box" name="query_guest_id">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create event invitation
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Event
        </th>

        <th>
          Guest
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_event_invitations.each do |an_event_invitation| %>
      <tr>
        <td>
          <%= an_event_invitation.id %>
        </td>

        <td>
          <%= an_event_invitation.event_id %>
        </td>

        <td>
          <%= an_event_invitation.guest_id %>
        </td>

        <td>
          <%= an_event_invitation.status %>
        </td>

        <td>
          <%= time_ago_in_words(an_event_invitation.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_event_invitation.updated_at) %> ago
        </td>

        <td>
          <a href="/event_invitations/<%= an_event_invitation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
